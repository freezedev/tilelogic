{
  "name": "tilelogic",
  "version": "2.0.0",
  "description": "Logic for tilemaps",
  "main": "dist/tilelogic.js",
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "lint": "tsdx lint '**/*.ts' --fix",
    "test": "tsdx test",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "size-limit": [
    {
      "path": "dist/tilelogic.cjs.production.min.js",
      "limit": "800 B"
    },
    {
      "path": "dist/tilelogic.esm.js",
      "limit": "800 B"
    }
  ],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frostney/tilelogic.git"
  },
  "keywords": [
    "game",
    "tilemap",
    "tile",
    "tiles",
    "logic"
  ],
  "files": [
    "dist",
    "src"
  ],
  "author": "Johannes Stein",
  "license": "(Unlicense OR MIT)",
  "bugs": {
    "url": "https://github.com/frostney/tilelogic/issues"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.9.1",
    "@types/jest": "^26.0.19",
    "@typescript-eslint/eslint-plugin": "4.1.1",
    "@typescript-eslint/parser": "4.1.1",
    "babel-eslint": "10.1.0",
    "eslint": "7.9.0",
    "eslint-config-airbnb-typescript": "10.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "size-limit": "^4.9.1",
    "tsdx": "0.13.3",
    "typescript": "4.0.3"
  }
}
